<main class="user-container">
    <div class="user-header">

        <img class="author-picture" src={{profilePicture}}>

        <div class="user-profile">

            <div class="user-info">

                <div class="user-numbers">

                    <h2>{{username}}</h2>
                    <div class="user-social-info">
                        <div class="user-follows">
                            <a href="/user/followers">Followers</a>
                            {{!-- TODO AJAX here --}}
                            <p id="follower_count"></p>
                        </div>
                        <div class="user-follows">
                            <a href="/user/following">Following</a>
                            {{!-- TODO AJAX here --}}
                            <p id="following_count"></p>
                        </div>

                    </div>

                    <div class="user-tag-info">
                        {{!-- TODO AJAX here --}}
                        <p>Favorite tags:</p>
                        <ol id="fav-tags"></ol>
                    </div>

                    <div class="user-tag-info">
                        {{!-- TODO AJAX here --}}
                        <p>Global most tagged with:</p>
                        <ol id="global-fav-tags"></ol>
                    </div>

                </div>

                <div class="user-bio">
                    <p>{{bio}}</p>
                    <p class="date-string">Account Age: {{account_age}}</p>
                </div>

            </div>

            <div class="user-actions">
                <h2>Actions</h2>
                <a href="/user">My Poems</a>
                <a href="/user/history">History</a>
                <a href="/user/liked-poems">Liked Poems</a>
                <a href="/user/tagged-poems">Tagged Poems</a>
                <a href="/user/edit">Edit Profile</a>
            </div>

        </div>

    </div>

    {{#if poems}}
    {{> user/poems}}
    {{/if}}

    {{#if history}}
    {{> user/history}}
    {{/if}}

    {{#if liked_poems}}
    {{> user/liked-poems}}
    {{/if}}

    {{#if tagged_poems}}
    {{> user/tagged-poems}}
    {{/if}}

    {{#if followers}}
    {{> user/followers}}
    {{/if}}

    {{#if following}}
    {{> user/following}}
    {{/if}}

    {{#if edit}}
    {{> user/edit}}
    {{/if}}

    <script type='module' src="/public/js/user/static.js"></script>
</main>