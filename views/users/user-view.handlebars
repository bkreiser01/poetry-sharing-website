<main class="user-container">
    <p id="userViewId" hidden="">{{userViewId}}</p>
    <div class="user-header">

        <img class="author-picture" alt="User Profile Picture" src={{profilePicture}}>

        <div class="user-profile">

            <div class="user-info">

                <div class="user-numbers">

                    <h2>{{username}}</h2>
                    <div class="user-social-info">
                        <div class="user-follows">
                            <a href="/user/{{userViewId}}/followers">Followers</a>
                            <p id="follower_count"></p>
                        </div>
                        <div class="user-follows">
                            <a href="/user/{{userViewId}}/following">Following</a>
                            <p id="following_count"></p>
                        </div>
                        <button id="followUnfollowBtn"></button>
                    </div>

                    <div class="user-tag-info">
                        <p>Favorite tags:</p>
                        <ol id="fav-tags"></ol>
                    </div>

                    <div class="user-tag-info">
                        <p>Global most tagged with:</p>
                        <ol id="global-fav-tags"></ol>
                    </div>

                </div>

                <div class="user-bio">
                    <p>{{bio}}</p>
                    <p class="date-string">Account Age: {{account_age}}</p>
                </div>

            </div>

            <div class="user-actions">
                <h2>Actions</h2>
                <a href="/user/{{userViewId}}">{{username}}'s Poems</a>
                <a href="/user/{{userViewId}}/tagged-poems">{{username}}'s Tagged Poems</a>
            </div>

        </div>

    </div>

    {{#if poems}}
    {{> user/poems}}
    {{/if}}

    {{#if tagged_poems}}
    {{> user/tagged-poems}}
    {{/if}}

    {{#if followers}}
    {{> user/followers}}
    {{/if}} 

    {{#if following}}
    {{> user/following}}
    {{/if}}

    <script type='module' src="/public/js/user/user-view.js"></script>
    <script type='module' src="/public/js/user/static.js"></script>
</main>