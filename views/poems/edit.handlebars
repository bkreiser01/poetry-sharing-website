<main>
   <p id="poemId" hidden="">{{poem._id}}</p>
   <p id="success" class="success"></p>
   <form class="edit-poem-form" id="edit-poem-form">
      <label for="title_input">Title: </label>
      <input type="text" name="title" id="title_input" placeholder="Poem Title" value="{{poem.title}}"
         class="full-width-input">
      <p id="title_error" class="error"></p><br>

      <label for="poem-body-area">Body: </label>
      <textarea name="body" placeholder="Write your poem here!" id="poem-body-area">{{poem.body}}</textarea>
      <p id="body_error" class="error"></p><br>

      <label for="reading-link">Link to reading:</label>
      <input type="url" name="linkInput" id="reading-link" value="{{poem.link}}">
      <p id="link_error" class="error"></p><br>

      <input type="submit" value="Save"></input>
   </form>

   <button id="delete-poem">Delete</button>


   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css">
   <script src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"></script>
   <script>
      const easyMDE = new EasyMDE({ element: document.getElementById('poem-body-area') });
   </script>
   <script type='module' src="/public/js/poems/edit-poem.js"></script>
</main>