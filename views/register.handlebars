{{!-- registration form --}}
<main>
    <h2>Register</h2>
    <form id="login_form">
        <label for="username_input">Username</label><br>
        <input name="username_input" id="username_input"><br>
        <label for="email_input">Email</label><br>
        <input name="email_input" id="email_input"><br>
        <label for="password_input">Password</label><br>
        <input name="password_input" id="password_input"><br>
        <label for="password_confirm">Password Confirmation</label><br>
        <input name="password_confirm" id="password_confirm"><br>
        <select name="privacy_input" id="privacy_input">
            <option value="">--</option>
            <option value="public">Public</option>
            <option value="private">Private</option>
        </select><br>
        <button type="submit">Register</button>
    </form>
</main>