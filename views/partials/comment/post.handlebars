<div class="post-comment">
    <form id="post-comment-form">
        <label for="comment-body"></label>
        <textarea name="comment-body" id="comment-body"
            placeholder="Say something..."></textarea>
        <p id="comment-body-error" class="error"></p><br>

        <label for="tag-select"></label>
        <select name="tag-select" id="tag-select">
            <option value>--</option>
        </select>
        <p id="tag-select-error" class="error"></p><br>

        <button type="submit">Post</button>
        <p id="comment-submit-error" class="error"></p>
    </form>
    <script type="module" src="/public/js/comments/post-comment.js"></script>
</div>