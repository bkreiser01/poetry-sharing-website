{{!-- homepage form --}}
<main class="homepage-container">
   <h2>Homepage</h2>
   {{#if noPoems}}
   {{!-- If there aren't any poems in the website display this --}}
   <p>Apologies the site is devoid of poems or something went horribly wrong</p>
   {{else}}
   {{!-- If there are poems, do the functionality --}}
   <ul class="homepage-poems">
      {{#each poemList as |poem|}}
      <li class="homepage-poems-item">
         <div class="poem-header">
            <div class="author-picture">{{this.username}} pp</div>
            <div class="poem-header-metadata">
               <a href="/poems/{{this._id}}"><h2>{{this.title}}</h2></a>
               <p>By: <a href="/user/{{this.userId}}">{{this.username}}</a></p>
            </div>
         </div>
      </li>
      {{/each}}
   </ul>
   {{/if}}
</main>